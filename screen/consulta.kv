MDScreen:
    name:"consulta"    
    camara1 : img1
    prueba : pr
    nav_drawers : nav_drawer  
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "MedicPiel"
            id: progress_toolbar
            elevation: 10
            left_action_items: [["menu", lambda x: app.navegacion()]]
            right_action_items: [["dots-vertical", lambda x: app.volver()]]

        ScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                spacing: (10, 15)
                padding: [25, 25]

                MDLabel:
                    halign: 'center'
                    text: ' Cargar Imagen'
                    orientation: 'vertical'

                MDCard:
                    ripple_behavior: True
                    orientation: 'vertical'
                    size_hint_y: None
                    size: 120, 220
                    elevation: 15
                    radius: 8
                    MDIconButton:
                        icon: "camera-outline"
                        user_font_size: "24sp"
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_release: app.file_chooser1()
                    Image:
                        id: img1
                        allow_stretch: True
                        keep_ratio: False
                        # size_hint_y: .5

                MDTextField:
                    id: pr
                    hint_text: 'Informacion'
                    width: 100
                    pos_hint: {"center_x": .5, "center_y": .8}
                
                MDFillRoundFlatIconButton:
                    text:"Enviar Consulta"
                    pos_hint: {"center_x":0.5, "center_y":0.5}
                    md_bg_color: app.theme_cls.primary_dark
                    on_press: app.detectarEnfermedad()
                
        MDBottomAppBar:
            MDToolbar:
                icon: 'camera'
                type: 'bottom'
                #mode: "free-end"
                #mode: 'end'
                on_action_button: app.consulta()        
    
    MDNavigationDrawer:
        id: nav_drawer
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"

        AnchorLayout:
            anchor_x: "left"
            size_hint_y: None
            height: avatar.height

            Image:
                id: avatar
                size_hint: None, None
                size: "56dp", "56dp"
                source: "data/perfil/images.jfif"

        MDLabel:
            text: "Pablo Perez Pereira"
            font_style: "Button"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: "pablo@gmail.com"
            font_style: "Caption"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            MDList:
                OneLineIconListItem:
                    text: 'Perfil'
                    on_press:app.volver()
                    IconLeftWidget:
                        icon:'account'

                OneLineIconListItem:
                    text: 'Diagnostico'
                    on_press:app.listarDiagnostiosNav()
                    IconLeftWidget:
                        icon:'window-shutter'
                    

                OneLineIconListItem:
                    text: 'Consulta'
                    on_press:app.consultaNav()
                    IconLeftWidget:
                        icon:'water-plus-outline'
                    
                    

                OneLineIconListItem:
                    text: 'Configuraciones'
                    IconLeftWidget:
                        icon:'wrench'

                OneLineIconListItem:
                    text: 'Salir'
                    on_press:app.loginS()
                    IconLeftWidget:
                        icon:'close-circle-multiple'